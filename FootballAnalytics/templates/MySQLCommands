CREATE TABLE events (
    id VARCHAR(255) PRIMARY KEY,
    foul_committed_advantage VARCHAR(255),
    foul_committed_offensive VARCHAR(255),
    foul_committed_penalty VARCHAR(255),
    foul_committed_type VARCHAR(255),
    foul_won_advantage VARCHAR(255),
    foul_won_defensive VARCHAR(255),
    foul_won_penalty VARCHAR(255),
    `50_50` VARCHAR(255),
    bad_behaviour_card VARCHAR(255),
    foul_committed_card VARCHAR(255),
    ball_receipt_outcome VARCHAR(255),
    ball_recovery_offensive VARCHAR(255),
    ball_recovery_recovery_failure VARCHAR(255),
    block_deflection VARCHAR(255),
    block_offensive VARCHAR(255),
    counterpress VARCHAR(255),
    carry_end_location decimal,
    pass_outcome VARCHAR(255),
    pass_end_location VARCHAR(255),
    dribble_nutmeg VARCHAR(255),
    dribble_outcome VARCHAR(255),
    dribble_overrun VARCHAR(255),
    duel_outcome VARCHAR(255),
    duel_type VARCHAR(255),
    duration VARCHAR(255),
    interception_outcome VARCHAR(255),
    location VARCHAR(255),
    match_id INT,
    minute INT,
    off_camera VARCHAR(255),
    `out` VARCHAR(255),
    period INT,
    play_pattern VARCHAR(255),
    player VARCHAR(255),
    player_id INT,
    position VARCHAR(255),
    possession VARCHAR(255),
    possession_team VARCHAR(255),
    possession_team_id INT,
    related_events VARCHAR(255),
    second INT,
    shot_outcome VARCHAR(255),
    substitution_outcome VARCHAR(255),
    substitution_replacement VARCHAR(255),
    tactics VARCHAR(255),
    team VARCHAR(255),
    timestamp varchar(255),
    `type` VARCHAR(255),
    under_pressure VARCHAR(255)
);

CREATE TABLE shots (
    id VARCHAR(255) PRIMARY KEY,
    shot_aerial_won VARCHAR(255),
    shot_body_part VARCHAR(255),
    shot_end_location VARCHAR(255),
    shot_first_time VARCHAR(255),
    shot_freeze_frame VARCHAR(255),
    shot_key_pass_id VARCHAR(255),
    shot_one_on_one VARCHAR(255),
    shot_statsbomb_xg VARCHAR(255),
    shot_technique VARCHAR(255),
    shot_type VARCHAR(255)
);

-- Create the passes table
CREATE TABLE passes (
    id VARCHAR(255) PRIMARY KEY,
    pass_aerial_won VARCHAR(255),
    pass_angle VARCHAR(255),
    pass_assisted_shot_id VARCHAR(255),
    pass_body_part VARCHAR(255),
    pass_cross VARCHAR(255),
    pass_deflected VARCHAR(255),
    pass_goal_assist VARCHAR(255),
    pass_height VARCHAR(255),
    pass_inswinging VARCHAR(255),
    pass_length VARCHAR(255),
    pass_outswinging VARCHAR(255),
    pass_recipient VARCHAR(255),
    pass_shot_assist VARCHAR(255),
    pass_switch VARCHAR(255),
    pass_technique VARCHAR(255),
    pass_through_ball VARCHAR(255),
    pass_type VARCHAR(255),
    clearance_aerial_won VARCHAR(255),
    clearance_body_part VARCHAR(255),
    clearance_head VARCHAR(255),
    clearance_left_foot VARCHAR(255),
    clearance_other VARCHAR(255),
    clearance_right_foot VARCHAR(255)
);

-- Create the goalkeepers table
CREATE TABLE goalkeepers (
    id VARCHAR(255) PRIMARY KEY,
    goalkeeper_body_part VARCHAR(255),
    goalkeeper_end_location VARCHAR(255),
    goalkeeper_outcome VARCHAR(255),
    goalkeeper_position VARCHAR(255),
    goalkeeper_technique VARCHAR(255),
    goalkeeper_type VARCHAR(255)
);

CREATE TABLE matchstats (
  minute INT,
  ATAccuratePasses INT,
  HTAccuratePasses INT,
  ATPasses INT,
  HTPasses INT,
  ATPenaltyBoxEntries INT,
  HTPenaltyBoxEntries INT,
  ATFinalThirdEntries INT,
  HTFinalThirdEntries INT,
  ATSetPiecexG FLOAT,
  HTSetPiecexG FLOAT,
  ATOpenPlayxG FLOAT,
  HTOpenPlayxG FLOAT,
  ATxG FLOAT,
  HTxG FLOAT,
  ATCumShotsOT INT,
  HTCumShotsOT INT,
  ATCumShots INT,
  HTCumShots INT,
  ATPossession FLOAT,
  HTPossession FLOAT,
  ATRedCards INT,
  HTRedCards INT,
  ATScorer VARCHAR(255),
  HTScorer VARCHAR(255),
  ATCumGoals INT,
  HTCumGoals INT,
  period INT,
  match_minute INT,
  timeline VARCHAR(255),
  matchid INT
);

CREATE TABLE IF NOT EXISTS xt (
    match_minute INT,
    team_name VARCHAR(255),
    player_name VARCHAR(255),
    start_x FLOAT,
    start_y FLOAT,
    end_x FLOAT,
    end_y FLOAT,
    type_name VARCHAR(255),
    result_name VARCHAR(255),
    xT_value FLOAT,
    matchid INT
);